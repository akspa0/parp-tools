<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningsNotAsErrors>CS1591,NU1901,NU1902,NU1903</WarningsNotAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
    <PackageReference Include="BLPSharp" Version="0.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../lib/wow.tools.local/WoWFormatLib/WoWFormatLib/WoWFormatLib.csproj" />
    <ProjectReference Include="../../../../lib/SereniaBLPLib/SereniaBLPLib/SereniaBLPLib.csproj" />
  </ItemGroup>
    
  <ItemGroup>
    <Compile Remove="Textures/BLPReader.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="wmo/shaders/**/*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="textures/wmo/**/*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="models/wmo/**/*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
